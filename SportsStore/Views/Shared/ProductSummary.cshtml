@model Product
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Name
            <span class="badge badge-pill badge-primary" style="float: right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <form id="@Model.ProductId" method="post"
          asp-controller="Cart" asp-action="AddToCart">
        <input type="hidden" asp-for="ProductId"/>
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
        <span class="card-text p-1">
            @Model.Descripction
            <button type="submit" class="btn btn-success btn-sm" style="float: right">Add to Cart</button>
        </span>
    </form>
    <div class="card-text p-1">@Model.Descripction</div>
</div>